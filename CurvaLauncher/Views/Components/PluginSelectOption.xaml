<local:PluginOption x:Class="CurvaLauncher.Views.Components.PluginSelectOption"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:local="clr-namespace:CurvaLauncher.Views.Components"
                    mc:Ignorable="d" 
                    d:DesignHeight="450" d:DesignWidth="800"
                    d:Background="White">

    <StackPanel>
        <TextBlock>
            <Run Text="{Binding RelativeSource={RelativeSource AncestorType=local:PluginOption},Path=OptionName}"
                 d:Text="SomeOption"/>
            <Run Text=":"/>
        </TextBlock>
        <ComboBox Name="input" Height="26" VerticalContentAlignment="Center" Margin="3 3 0 0"/>
    </StackPanel>
</local:PluginOption>
